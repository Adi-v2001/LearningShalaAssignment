generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String    @unique
  phone    String
  password String
  article  Article[]
}

model Article {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  category    String
  image       String
  user        User   @relation(fields: [userId], references: [id])
  userId      String @db.ObjectId
}
